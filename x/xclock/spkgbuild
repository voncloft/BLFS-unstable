# description   : The xclock package contains a simple clock application which is used in the default xinit configuration
# depends       : xorg libraries

name=xclock
version=1.1.1    
release=1
source="https://www.x.org/pub/individual/app/xclock-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure $XORG_CONFIG 
    make
    make DESTDIR=$PKG install
}
