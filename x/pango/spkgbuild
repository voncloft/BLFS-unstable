# description   : Pango is a library for laying out and rendering text, with an emphasis on internationalization
# depends       : fontconfig freetype harfbuzz fribidi glib cairo harfbuzz xorglibraries

name=pango
version=1.56.4    
release=1
source="https://download.gnome.org/sources/pango/1.56/pango-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup --prefix=/usr            \
    --buildtype=release      \
    --wrap-mode=nofallback   \
    -D introspection=enabled \
    ..                       
    ninja
    sed "/docs_dir =/s@\$@ / 'pango-$version'@" -i ../docs/meson.build 
    meson configure -D documentation=true                            
    ninja
    DESTDIR=$PKG ninja install
}
