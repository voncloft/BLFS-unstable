# description   : The Gtkmm package provides a C++ interface to GTK+ 3
# depends       : atkmm gtk pangomm

name=gtkmm
version=3.24.10    
release=1
source="https://download.gnome.org/sources/gtkmm/3.24/gtkmm-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir gtkmm3-build 
    cd    gtkmm3-build 
    meson setup --prefix=/usr --buildtype=release .. 
    ninja
    mv -v /usr/share/doc/gtkmm-3.0 /usr/share/doc/gtkmm-$version
    DESTDIR=$PKG ninja install
}
