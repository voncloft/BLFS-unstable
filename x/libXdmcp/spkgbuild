# description   : The libXdmcp package contains a library implementing the X Display Manager Control Protocol
# depends       : xorgproto

name=libxdmcp
version=1.1.5    
release=1
source="https://www.x.org/pub/individual/lib/libXdmcp-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure $XORG_CONFIG --docdir=/usr/share/doc/libXdmcp-$version 
    make
    make DESTDIR=$PKG install
}
