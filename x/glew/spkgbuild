# description   : GLEW is the OpenGL Extension Wrangler Library
# depends       : mesa

name=glew
version=2.2.0    
release=1
source=""

options="!checksum"

build() {
    cd $name-$version
    
    sed -i 's%lib64%lib%g' config/Makefile.linux 
    sed -i -e '/glew.lib.static:/d' \
    -e '/0644 .*STATIC/d'    \
    -e 's/glew.lib.static//' Makefile     
    make
    make DESTDIR=$PKG install.all
}
