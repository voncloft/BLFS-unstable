# description   : The libcairomm-1
# depends       : cairo libsigc boost

name=libcairomm-1.16 (cairomm
version=1.18.0)    
release=1
source="https://www.cairographics.org/releases/cairomm-1.18.0.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir bld 
    cd    bld 
    meson setup ..             \
    --prefix=/usr        \
    --buildtype=release  \
    -D build-tests=true  \
    -D boost-shared=true 
    ninja
    DESTDIR=$PKG ninja install
}
