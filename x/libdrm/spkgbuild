# description   : Libdrm provides a userspace library for accessing the direct rendering manager (DRM) on operating systems that support the ioctl interface
# depends       : xorglibraries

name=libdrm
version=2.4.125    
release=1
source="https://dri.freedesktop.org/libdrm/libdrm-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup --prefix=$XORG_PREFIX \
    --buildtype=release   \
    -D udev=true          \
    -D valgrind=disabled  \
    ..                    
    ninja
    DESTDIR=$PKG ninja install
}
