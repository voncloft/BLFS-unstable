# description   : The LXDE Icon Theme package contains nuoveXT 2
# depends       : 

name=lxde-icon-theme
version=0.5.1    
release=1
source="https://downloads.sourceforge.net/lxde/lxde-icon-theme-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr
    gtk-update-icon-cache -qf /usr/share/icons/nuoveXT2
    make DESTDIR=$PKG install
}
