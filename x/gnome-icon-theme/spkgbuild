# description   : The GNOME Icon Theme package contains an assortment of non-scalable icons of different sizes and themes
# depends       : gtk hicoloricontheme iconnamingutils

name=gnome-icon-theme
version=3.12.0    
release=1
source="https://download.gnome.org/sources/gnome-icon-theme/3.12/gnome-icon-theme-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
}
