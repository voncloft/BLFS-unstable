# description   : The lmdb package is a fast, compact, key-value embedded data store
# depends       : 

name=lmdb
version=0.9.33    
release=1
source="https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    cd libraries/liblmdb 
    make DESTDIR=$PKG                 
    sed -i 's| liblmdb.a||' Makefile
    make DESTDIR=$PKG prefix=/usr install
}
