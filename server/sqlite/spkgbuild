# description   : The SQLite package is a software library that implements a self-contained, serverless, zero-configuration, transactional SQL database engine
# depends       : 

name=sqlite
version=3.50.4    
release=1
source="https://sqlite.org/2025/sqlite-autoconf-3500400.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    unzip -q ../sqlite-doc-3500400.zip
    ./configure --prefix=/usr     \
    --disable-static  \
    --enable-fts{4,5} \
    CPPFLAGS="-D SQLITE_ENABLE_COLUMN_METADATA=1 \
    -D SQLITE_ENABLE_UNLOCK_NOTIFY=1   \
    -D SQLITE_ENABLE_DBSTAT_VTAB=1     \
    -D SQLITE_SECURE_DELETE=1"         
    make
    make DESTDIR=$PKG install
    install -v -m755 -d /usr/share/doc/sqlite-$version 
    cp -v -R sqlite-doc-3500400/* /usr/share/doc/sqlite-$version
}
