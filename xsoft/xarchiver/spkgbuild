# description   : XArchiver is a GTK+ archive manager with support for tar, xz, bzip2, gzip, zip, 7z, rar, lzo and many other archive formats
# depends       : gtk

name=xarchiver
version=0.5.4.25    
release=1
source="https://github.com/ib/xarchiver/archive/$version/xarchiver-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed '/TOGGLE.*prefer_unzip/s/TRUE/FALSE/' -i src/pref_dialog.c
    ./configure  --prefix=/usr               \
    --libexecdir=/usr/lib/xfce4 \
    --docdir=/usr/share/doc/xarchiver-$version 
    make
    gtk-update-icon-cache -qtf /usr/share/icons/hicolor 
    update-desktop-database -q
    make DESTDIR=$PKG install
}
