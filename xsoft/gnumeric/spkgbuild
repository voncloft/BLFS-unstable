# description   : The Gnumeric package contains a spreadsheet program which is useful for mathematical analysis
# depends       : goffice itstool adwaitaicontheme oxygenicons gnomeicontheme chapter24graphicalenvironments yelp

name=gnumeric
version=1.12.59    
release=1
source="https://download.gnome.org/sources/gnumeric/1.12/gnumeric-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr  
    make
    make DESTDIR=$PKG install
}
