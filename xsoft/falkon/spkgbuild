# description   : Falkon is a KDE web browser using the QtWebEngine rendering engine
# depends       : extracmakemodules kdeframeworks qtwebengine

name=falkon
version=25.04.0    
release=1
source="https://download.kde.org/stable/release-service/$version/src/falkon-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    .. 
    make
    make DESTDIR=$PKG install 
    ldconfig
}
