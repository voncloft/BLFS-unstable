# description   : The XScreenSaver package is a modular screen saver and locker for the X Window System
# depends       : gtk xorgapplications glu

name=xscreensaver
version=6.12    
release=1
source="https://www.jwz.org/xscreensaver/xscreensaver-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --with-elogind 
    make
    make DESTDIR=$PKG install
cat > $PKG/etc/pam.d/xscreensaver << "EOF"
    # Begin /etc/pam.d/xscreensaver
    auth    include system-auth
    account include system-account
    # End /etc/pam.d/xscreensaver
EOF
}
