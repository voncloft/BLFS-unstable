# description   : The qps package contains a Qt process manager
# depends       : liblxqt

name=qps
version=2.11.1    
release=1
source="https://github.com/lxqt/qps/releases/download/$version/qps-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_BUILD_TYPE=Release  \
    -D CMAKE_INSTALL_PREFIX=/usr \
    ..                           
    make
    make DESTDIR=$PKG install
}
