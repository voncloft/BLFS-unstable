# description   : The obconf-qt package is a Qt-based configuration tool for Openbox
# depends       : hicoloricontheme lxqtbuildtools openbox qt

name=obconf-qt
version=0.16.5    
release=1
source="https://github.com/lxqt/obconf-qt/releases/download/$version/obconf-qt-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
