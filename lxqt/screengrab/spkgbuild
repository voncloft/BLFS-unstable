# description   : The screengrab package is a cross-platform tool for making screenshots quickly
# depends       : lxqtbuildtools kwindowsystemforlxqt libqtxdg

name=screengrab
version=3.0.0    
release=1
source="https://github.com/lxqt/screengrab/releases/download/$version/screengrab-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_BUILD_TYPE=Release  \
    -D CMAKE_INSTALL_PREFIX=/usr \
    ..                           
    make
    make DESTDIR=$PKG install
}
