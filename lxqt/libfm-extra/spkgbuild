# description   : The libfm-extra package contains a library and other files required by the menu-cache-gen program in /usr/bin/libexec installed by menu-cache-1
# depends       : glib

name=libfm-extra
version=1.3.2    
release=1
source="https://downloads.sourceforge.net/pcmanfm/libfm-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --with-extra-only \
    --with-gtk=no     \
    --disable-static  
    make
    make DESTDIR=$PKG install
}
