# description   : The lxqt-themes package provides a number of graphics files and themes for the LXQt desktop
# depends       : lxqtbuildtools

name=lxqt-themes
version=2.2.0    
release=1
source="https://github.com/lxqt/lxqt-themes/releases/download/$version/lxqt-themes-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
