# description   : The libqtxdg package contains a Qt implementation of the freedesktop
# depends       : cmake qt

name=libqtxdg
version=4.2.0    
release=1
source="https://github.com/lxqt/libqtxdg/releases/download/$version/libqtxdg-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..       
    make
    make DESTDIR=$PKG install
}
