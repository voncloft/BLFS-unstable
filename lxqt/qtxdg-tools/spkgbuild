# description   : The qtxdg-tools contains a CLI MIME tool for handling file associations and opening files with their default applications
# depends       : libqtxdg

name=qtxdg-tools
version=4.2.0    
release=1
source="https://github.com/lxqt/qtxdg-tools/releases/download/$version/qtxdg-tools-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
