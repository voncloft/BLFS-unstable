# description   : The lxqt-powermanagement package provides the power management module for LXQt
# depends       : liblxqt kidletimeforlxqt solidforlxqt upower

name=lxqt-powermanagement
version=2.2.1    
release=1
source="https://github.com/lxqt/lxqt-powermanagement/releases/download/$version/lxqt-powermanagement-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
