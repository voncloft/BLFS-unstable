# description   : The liblxqt is the core utility library for all LXQt components
# depends       : libqtxdg kwindowsystemforlxqt polkitqt

name=liblxqt
version=2.2.0    
release=1
source="https://github.com/lxqt/liblxqt/releases/download/$version/liblxqt-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
