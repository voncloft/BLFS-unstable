# description   : The lxqt-globalkeys package contains a daemon used to register global keyboard shortcuts as well as an editor for keyboard shortcuts
# depends       : liblxqt

name=lxqt-globalkeys
version=2.2.0    
release=1
source="https://github.com/lxqt/lxqt-globalkeys/releases/download/$version/lxqt-globalkeys-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
