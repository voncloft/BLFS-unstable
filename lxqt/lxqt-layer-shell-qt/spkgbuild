# description   : This component is meant for applications to be able to easily use clients based on a \"wlr-layer-shell\" protocol
# depends       : extracmakemodules qt

name=layer-shell-qt
version=6.4.4 for lxqt    
release=1
source="https://download.kde.org/stable/plasma/6.4.4/layer-shell-qt-6.4.4.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    -W no-dev ..                 
    make
    make DESTDIR=$PKG install
}
