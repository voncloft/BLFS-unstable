# description   : The lxqt-policykit package is the LXQt PolicyKit agent
# depends       : liblxqt polkitqt

name=lxqt-policykit
version=2.2.0    
release=1
source="https://github.com/lxqt/lxqt-policykit/releases/download/$version/lxqt-policykit-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
