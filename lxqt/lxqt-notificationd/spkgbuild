# description   : The lxqt-notificationd package is the LXQt notification daemon
# depends       : liblxqt

name=lxqt-notificationd
version=2.2.0    
release=1
source="https://github.com/lxqt/lxqt-notificationd/releases/download/$version/lxqt-notificationd-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_BUILD_TYPE=Release  \
    -D CMAKE_INSTALL_PREFIX=/usr \
    ..                           
    make
    make DESTDIR=$PKG install
}
