# description   : The lxqt-qtplugin package provides an LXQt Qt platform integration plugin
# depends       : libfmqt liblxqt libdbusmenulxqt

name=lxqt-qtplugin
version=2.2.0    
release=1
source="https://github.com/lxqt/lxqt-qtplugin/releases/download/$version/lxqt-qtplugin-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
