# description   : The lxqt-menu-data package contains compliant menu files for LXQt
# depends       : lxqtbuildtools

name=lxqt-menu-data
version=2.2.0    
release=1
source="https://github.com/lxqt/lxqt-menu-data/releases/download/$version/lxqt-menu-data-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..  
    make
    make DESTDIR=$PKG install
}
