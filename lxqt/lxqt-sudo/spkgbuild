# description   : The lxqt-sudo package is a graphical front end to sudo and su respectively
# depends       : liblxqt

name=lxqt-sudo
version=2.2.0    
release=1
source="https://github.com/lxqt/lxqt-sudo/releases/download/$version/lxqt-sudo-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    ..                           
    make
    make DESTDIR=$PKG install
}
