# description   : The Xfce4 Panel package contains the Xfce4 Panel
# depends       : cairo exo garcon libwnck libxfce4windowing

name=xfce4-panel
version=4.20.4    
release=1
source="https://archive.xfce.org/src/xfce/xfce4-panel/4.20/xfce4-panel-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc 
    make
    make DESTDIR=$PKG install
}
