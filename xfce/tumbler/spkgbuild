# description   : The Tumbler package contains a D-Bus thumbnailing service based on the thumbnail management D-Bus specification
# depends       : glib

name=tumbler
version=4.20.0    
release=1
source="https://archive.xfce.org/src/xfce/tumbler/4.20/tumbler-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc 
    make
    make DESTDIR=$PKG install
    rm -fv /usr/lib/systemd/user/tumblerd.service
}
