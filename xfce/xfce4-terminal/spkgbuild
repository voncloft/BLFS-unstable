# description   : Xfce4 Terminal is a GTK+3 terminal emulator
# depends       : libxfce4ui vte

name=xfce4-terminal
version=1.1.5    
release=1
source="https://archive.xfce.org/src/apps/xfce4-terminal/1.1/xfce4-terminal-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup ..      \
    --prefix=/usr \
    --buildtype=release 
    ninja
    DESTDIR=$PKG ninja install
}
