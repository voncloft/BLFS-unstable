# description   : Exo is a support library used in the Xfce desktop
# depends       : gtk libxfce4ui libxfce4util

name=exo
version=4.20.0    
release=1
source="https://archive.xfce.org/src/xfce/exo/4.20/exo-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc 
    make
    make DESTDIR=$PKG install
}
