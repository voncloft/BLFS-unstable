# description   : XviD is an MPEG-4 compliant video CODEC
# depends       : 

name=xvid
version=1.3.7    
release=1
source="https://downloads.xvid.com/downloads/xvidcore-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i '/typedef int bool;/d' src/encoder.h
    cd build/generic 
    sed -i 's/^LN_S=@LN_S@/ -f -v/' platform.inc.in 
    ./configure --prefix=/usr 
    make
    sed -i '/libdir.*STATIC_LIB/ s/^/#/' Makefile 
    make DESTDIR=$PKG install 
    chmod -v 755 /usr/lib/libxvidcore.so.4.3 
    install -v -m755 -d /usr/share/doc/xvidcore-$version/examples 
    install -v -m644 ../../doc/* /usr/share/doc/xvidcore-$version 
    install -v -m644 ../../examples/* \
    /usr/share/doc/xvidcore-$version/examples
}
