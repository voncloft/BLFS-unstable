# description   : The pipewire package contains a server and userspace API to handle multimedia pipelines
# depends       : bluez gstreamer gstpluginsbase pulseaudio sbc v4lutils wireplumber

name=pipewire
version=1.4.7    
release=1
source="https://gitlab.freedesktop.org/pipewire/pipewire/-/archive/$version/pipewire-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup ..                 \
    --prefix=/usr            \
    --buildtype=release      \
    -D session-managers="[]" 
    ninja
    DESTDIR=$PKG ninja install
}
