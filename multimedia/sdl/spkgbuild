# description   : The Simple DirectMedia Layer (SDL for short) is a cross-platform library designed to make it easy to write multimedia software, such as games and emulators
# depends       : cmake glu sdl2

name=sdl12-compat
version=1.2.68    
release=1
source="https://github.com/libsdl-org/sdl12-compat/archive/release-$version/sdl12-compat-release-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=RELEASE  \
    ..  
    make
    make DESTDIR=$PKG install 
    rm -vf /usr/lib/libSDLmain.a
}
