# description   : The ALSA Firmware package contains firmware for certain sound cards
# depends       : alsatools

name=alsa-firmware
version=1.2.4    
release=1
source="https://www.alsa-project.org/files/pub/firmware/alsa-firmware-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
}
