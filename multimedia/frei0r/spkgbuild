# description   : Frei0r is a minimalistic plugin API for video effects
# depends       : 

name=frei0r
version=2.3.3    
release=1
source="https://github.com/dyne/frei0r/archive/v$version/frei0r-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir -vp build 
    cd        build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr        \
    -D CMAKE_BUILD_TYPE=Release         \
    -D CMAKE_POLICY_VERSION_MINIMUM=3.5 \
    -W no-dev .. 
    make
    make DESTDIR=$PKG install
}
