# description   : Taglib is a library used for reading, writing and manipulating audio file tags and is used by applications such as VLC
# depends       : cmake utfcpp

name=taglib
version=2.1.1    
release=1
source="https://taglib.org/releases/taglib-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    -D BUILD_SHARED_LIBS=ON \
    .. 
    make
    make DESTDIR=$PKG install
}
