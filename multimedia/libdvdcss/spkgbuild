# description   : libdvdcss is a simple library designed for accessing DVDs as a block device without having to bother about the decryption
# depends       : 

name=libdvdcss
version=1.4.3    
release=1
source="https://get.videolan.org/libdvdcss/$version/libdvdcss-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/libdvdcss-$version 
    make
    make DESTDIR=$PKG install
}
