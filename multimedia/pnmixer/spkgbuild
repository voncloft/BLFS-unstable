# description   : The Pnmixer package provides a lightweight volume control with a tray icon
# depends       : alsautils gtk libnotify

name=pnmixer
version=0.7.2    
release=1
source="https://github.com/nicklan/pnmixer/releases/download/v$version/pnmixer-v$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr ..  
    make
    make DESTDIR=$PKG install
}
