# description   : The libvorbis package contains a general purpose audio and music encoding format
# depends       : libogg

name=libvorbis
version=1.3.7    
release=1
source="https://downloads.xiph.org/releases/vorbis/libvorbis-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install 
    install -v -m644 doc/Vorbis* /usr/share/doc/libvorbis-$version
}
