# description   : libdvdread is a library which provides a simple foundation for reading DVDs
# depends       : 

name=libdvdread
version=6.1.3    
release=1
source="https://get.videolan.org/libdvdread/$version/libdvdread-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/libdvdread-$version 
    make
    make DESTDIR=$PKG install
}
