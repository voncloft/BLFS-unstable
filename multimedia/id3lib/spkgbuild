# description   : id3lib is a library for reading, writing and manipulating id3v1 and id3v2 multimedia data containers
# depends       : 

name=id3lib
version=3.8.3    
release=1
source="https://downloads.sourceforge.net/id3lib/id3lib-$version.tar.gz
https://www.linuxfromscratch.org/patches/blfs/svn/id3lib-$version-consolidated_patches-1.patch"

options="!checksum"

build() {
    cd $name-$version
    
    patch -Np1 -i ../id3lib-$version-consolidated_patches-1.patch 
    libtoolize -fc                
    aclocal                       
    autoconf                      
    automake --add-missing --copy 
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install  
    cp doc/man/* /usr/share/man/man1 
    install -v -m755 -d /usr/share/doc/id3lib-$version 
    install -v -m644 doc/*.{gif,jpg,png,ico,css,txt,php,html} \
    /usr/share/doc/id3lib-$version
}
