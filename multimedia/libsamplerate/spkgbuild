# description   : libsamplerate is a sample rate converter for audio
# depends       : 

name=libsamplerate
version=0.2.2    
release=1
source="https://github.com/libsndfile/libsamplerate/releases/download/$version/libsamplerate-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/libsamplerate-$version 
    make
    make DESTDIR=$PKG install
}
