# description   : The libogg package contains the Ogg file structure
# depends       : 

name=libogg
version=1.3.6    
release=1
source="https://downloads.xiph.org/releases/ogg/libogg-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/libogg-$version 
    make
    make DESTDIR=$PKG install
}
