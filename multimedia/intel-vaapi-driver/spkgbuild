# description   : The intel-vaapi-driver package contains a VA API driver for Intel GPUs that are provided with Haswell CPUs and earlier
# depends       : libva xorgbuildenvironment

name=intel-vaapi-driver
version=2.4.1    
release=1
source="https://github.com/intel/intel-vaapi-driver/releases/download/$version/intel-vaapi-driver-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure $XORG_CONFIG 
    make
    make DESTDIR=$PKG install
}
