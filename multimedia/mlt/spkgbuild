# description   : The mlt package is the Media Lovin Toolkit
# depends       : 

name=mlt
version=7.32.0    
release=1
source="https://github.com/mltframework/mlt/releases/download/v$version/mlt-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    -D MOD_QT=OFF                \
    -D MOD_QT6=ON                \
    -W no-dev .. 
    make
    make DESTDIR=$PKG install
}
