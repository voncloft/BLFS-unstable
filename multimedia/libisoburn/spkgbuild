# description   : libisoburn is a frontend for the libburn and libisofs libraries, which enables creation and expansion of ISO-9660 filesystems on all CD/DVD/BD media supported by libburn
# depends       : libburn libisofs

name=libisoburn
version=1.5.6    
release=1
source="https://files.libburnia-project.org/releases/libisoburn-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr              \
    --disable-static           \
    --enable-pkg-check-modules 
    make
    doxygen doc/doxygen.conf
    make DESTDIR=$PKG install
    install -v -dm755 /usr/share/doc/libisoburn-$version 
    install -v -m644 doc/html/* /usr/share/doc/libisoburn-$version
}
