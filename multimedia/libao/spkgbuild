# description   : The libao package contains a cross-platform audio library
# depends       : 

name=libao
version=1.2.0    
release=1
source="https://downloads.xiph.org/releases/ao/libao-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i '/limits.h/a #include <time.h>' src/plugins/pulse/ao_pulse.c
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install 
    install -v -m644 README /usr/share/doc/libao-$version
}
