# description   : This package, from the WebM project, provides the reference implementations of the VP8 Codec (used in most current HTML5 video) and of the next-generation VP9 Codec
# depends       : yasm nasm whichalternatives

name=libvpx
version=1.15.2    
release=1
source="https://github.com/webmproject/libvpx/archive/v$version/libvpx-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    find -type f | xargs touch
    sed -i 's/cp -p/cp/' build/make/Makefile 
    mkdir libvpx-build            
    cd    libvpx-build            
    ../configure --prefix=/usr    \
    --enable-shared  \
    --disable-static 
    make
    make DESTDIR=$PKG install
}
