# description   : JOE (Joe's own editor) is a small text editor capable of emulating WordStar, Pico, and Emacs
# depends       : 

name=joe
version=4.6    
release=1
source="https://downloads.sourceforge.net/joe-editor/joe-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --docdir=/usr/share/doc/joe-$version 
    make
    make DESTDIR=$PKG install 
    install -vm 755 joe/util/{stringify,termidx,uniproc} /usr/bin
}
