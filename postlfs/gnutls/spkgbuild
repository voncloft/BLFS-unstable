# description   : The GnuTLS package contains libraries and userspace tools which provide a secure layer over a reliable transport layer
# depends       : nettle makeca libunistring libtasn1 p11kit

name=gnutls
version=3.8.10    
release=1
source="https://www.gnupg.org/ftp/gcrypt/gnutls/v3.8/gnutls-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr \
    --docdir=/usr/share/doc/gnutls-$version \
    --with-default-trust-store-pkcs11="pkcs11:" 
    make
    make DESTDIR=$PKG install
}
