# description   : The efivar package provides tools and libraries to manipulate EFI variables
# depends       : 

name=efivar
version=39    
release=1
source="https://github.com/rhboot/efivar/archive/$version/efivar-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    make DESTDIR=$PKG ENABLE_DOCS=0
    make DESTDIR=$PKG install ENABLE_DOCS=0 LIBDIR=/usr/lib
    install -vm644 docs/efivar.1 /usr/share/man/man1 
    install -vm644 docs/*.3      /usr/share/man/man3
}
