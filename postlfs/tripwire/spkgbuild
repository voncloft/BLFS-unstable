# description   : The Tripwire package contains programs used to verify the integrity of the files on a given system
# depends       : 

name=tripwire
version=2.4.3.7    
release=1
source="https://github.com/Tripwire/tripwire-open-source/releases/download/$version/tripwire-open-source-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -e '/^CLOBBER/s/false/true/'         \
    -e 's|TWDB="${prefix}|TWDB="/var|'   \
    -e '/TWMAN/ s|${prefix}|/usr/share|' \
    -e '/TWDOCS/s|${prefix}/doc/tripwire|/usr/share/doc/tripwire-$version|' \
    -i installer/install.cfg                               
    find . -name Makefile.am | xargs                           \
    sed -i 's/^[[:alpha:]_]*_HEADERS.*=/noinst_HEADERS =/' 
    sed '/dist/d' -i man/man?/Makefile.am                      
    autoreconf -fi                                             
    ./configure --prefix=/usr --sysconfdir=/etc/tripwire       
    make DESTDIR=$PKG CPPFLAGS=-std=c++11
    sed -i -e 's@installer/install.sh@ -n -s
    -l
    @' Makefile
    sed '/-t 0/,+3d' -i installer/install.sh
    twprint --print-report -r /var/lib/tripwire/report/
    tripwire --update --twrfile /var/lib/tripwire/report/
    twadmin --create-polfile /etc/tripwire/twpol.txt 
    tripwire --init
    make DESTDIR=$PKG install 
    cp -v policy/*.txt /usr/share/doc/tripwire-$version
    twadmin --create-polfile --site-keyfile /etc/tripwire/site.key \
    /etc/tripwire/twpol.txt 
    tripwire --init
    tripwire --check > /etc/tripwire/report.txt
}
