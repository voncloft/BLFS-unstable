# description   : The efibootmgr package provides tools and libraries to manipulate EFI variables
# depends       : efivar popt

name=efibootmgr
version=18    
release=1
source="https://github.com/rhboot/efibootmgr/archive/$version/efibootmgr-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    make DESTDIR=$PKG EFIDIR=LFS EFI_LOADER=grubx64.efi
    make DESTDIR=$PKG install EFIDIR=LFS
}
