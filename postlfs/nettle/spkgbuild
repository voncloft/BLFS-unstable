# description   : The Nettle package contains a low-level cryptographic library that is designed to fit easily in many contexts
# depends       : 

name=nettle
version=3.10.2    
release=1
source="https://ftp.gnu.org/gnu/nettle/nettle-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install 
    chmod   -v   755 /usr/lib/lib{hogweed,nettle}.so 
    install -v -m755 -d /usr/share/doc/nettle-$version 
    install -v -m644 nettle.{html,pdf} /usr/share/doc/nettle-$version
}
