# description   : Mousepad is a simple GTK text editor for the Xfce desktop environment
# depends       : gtksourceview4 libxfce4ui gspell

name=mousepad
version=0.6.5    
release=1
source="https://archive.xfce.org/src/apps/mousepad/0.6/mousepad-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup ..            \
    --prefix=/usr       \
    --buildtype=release 
    ninja
    DESTDIR=$PKG ninja install
}
