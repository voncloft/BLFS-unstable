# description   : The dosfstools package contains various utilities for use with the FAT family of file systems
# depends       : 

name=dosfstools
version=4.2    
release=1
source="https://github.com/dosfstools/dosfstools/releases/download/v$version/dosfstools-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr            \
    --enable-compat-symlinks \
    --mandir=/usr/share/man  \
    --docdir=/usr/share/doc/dosfstools-$version 
    make
    make DESTDIR=$PKG install
}
