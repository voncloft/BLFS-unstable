# description   : Phonon is the multimedia API for KDE
# depends       : cmake extracmakemodules glib qt phononbackendvlc

name=phonon
version=4.12.0    
release=1
source="https://download.kde.org/stable/phonon/$version/phonon-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    -D PHONON_BUILD_QT5=OFF      \
    -W no-dev .. 
    make
    make DESTDIR=$PKG install
}
