# description   : The OpenJade package contains a DSSSL engine
# depends       : opensp

name=openjade
version=1.3.2    
release=1
source="https://downloads.sourceforge.net/openjade/openjade-$version.tar.gz
https://www.linuxfromscratch.org/patches/blfs/svn/openjade-$version-upstream-1.patch"

options="!checksum"

build() {
    cd $name-$version
    
    patch -Np1 -i ../openjade-$version-upstream-1.patch
    sed -i -e '/getopts/{N;s#G#g#;s#do .getopts.pl.;##;}' \
    -e '/use POSIX/ause Getopt::Std;' msggen.pl
    export CXXFLAGS="${CXXFLAGS:--O2 -g} -fno-lifetime-dse"            
    ./configure --prefix=/usr                                \
    --mandir=/usr/share/man                      \
    --enable-http                                \
    --disable-static                             \
    --enable-default-catalog=/etc/sgml/catalog   \
    --enable-default-search-path=/usr/share/sgml \
    --datadir=/usr/share/sgml/openjade-$version   
    make
    make DESTDIR=$PKG install                                                   
    make DESTDIR=$PKG install-man                                               
    ln -v -sf openjade /usr/bin/jade                               
    ln -v -sf libogrove.so /usr/lib/libgrove.so                    
    ln -v -sf libospgrove.so /usr/lib/libspgrove.so                
    ln -v -sf libostyle.so /usr/lib/libstyle.so                    
    install -v -m644 dsssl/catalog /usr/share/sgml/openjade-$version/ 
    install -v -m644 dsssl/*.{dtd,dsl,sgm}              \
    /usr/share/sgml/openjade-$version                             
    install-catalog --add /etc/sgml/openjade-$version.cat  \
    /usr/share/sgml/openjade-$version/catalog                     
    install-catalog --add /etc/sgml/sgml-docbook.cat    \
    /etc/sgml/openjade-$version.cat
    echo "SYSTEM \"http://www.oasis-open.org/docbook/xml/4.5/docbookx.dtd\" \
    \"/usr/share/xml/docbook/xml-dtd-4.5/docbookx.dtd\"" >> \
    /usr/share/sgml/openjade-$version/catalog
}
