# description   : Itstool extracts messages from XML files and outputs PO template files, then merges translations from MO files to create translated XML files
# depends       : docbookxml

name=itstool
version=2.0.7    
release=1
source="https://files.itstool.org/itstool/itstool-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i 's/re.sub(/re.sub(r/'         itstool.in 
    sed -i 's/re.compile(/re.compile(r/' itstool.in
    PYTHON=/usr/bin/python3 ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
}
