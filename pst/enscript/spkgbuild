# description   : Enscript converts ASCII text files to PostScript, HTML, RTF, ANSI and overstrikes
# depends       : 

name=enscript
version=1.6.6    
release=1
source="https://ftp.gnu.org/gnu/enscript/enscript-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr              \
    --sysconfdir=/etc/enscript \
    --localstatedir=/var       \
    --with-media=Letter 
    make DESTDIR=$PKG 
    pushd docs 
    makeinfo --plaintext -o enscript.txt enscript.texi 
    popd
    make DESTDIR=$PKG -j1 -C docs ps pdf
    make DESTDIR=$PKG install 
    install -v -m755 -d /usr/share/doc/enscript-$version 
    install -v -m644    README* *.txt docs/*.txt \
    /usr/share/doc/enscript-$version
    install -v -m644 docs/*.{dvi,pdf,ps} \
    /usr/share/doc/enscript-$version
}
