# description   : The xmlto package is a front-end to a XSL toolchain
# depends       : docbookxml docbookxslnons libxslt

name=xmlto
version=0.0.29    
release=1
source="https://pagure.io/xmlto/archive/$version/xmlto-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    autoreconf -fiv                                  
    LINKS="/usr/bin/links" ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
}
