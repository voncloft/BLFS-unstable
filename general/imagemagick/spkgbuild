# description   : ImageMagick is a collection of tools and libraries to read, write, and manipulate an image in various image formats
# depends       : xorglibraries

name=imagemagick-7.1.1
version=47    
release=1
source="https://www.imagemagick.org/archive/releases/ImageMagick-7.1.1-$version.tar.xz
http://www.mcmurchy.com/ralcgm/ralcgm-3.51.tar.gz
http://www.mcmurchy.com/urt/urt-3.1b.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --enable-hdri     \
    --with-modules    \
    --with-perl       \
    --disable-static  
    make
    make DESTDIR=$PKG DOCUMENTATION_PATH=/usr/share/doc/imagemagick-7.1.1 install
}
