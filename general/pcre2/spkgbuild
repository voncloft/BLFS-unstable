# description   : The PCRE2 package contains a new generation of the Perl Compatible Regular Expression libraries
# depends       : 

name=pcre2
version=10.45    
release=1
source="https://github.com/PCRE2Project/pcre2/releases/download/pcre2-$version/pcre2-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr                       \
    --docdir=/usr/share/doc/pcre2-$version \
    --enable-unicode                    \
    --enable-jit                        \
    --enable-pcre2-16                   \
    --enable-pcre2-32                   \
    --enable-pcre2grep-libz             \
    --enable-pcre2grep-libbz2           \
    --enable-pcre2test-libreadline      \
    --disable-static                    
    make
    make DESTDIR=$PKG install
}
