# description   : libunistring is a library that provides functions for manipulating Unicode strings and for manipulating C strings according to the Unicode standard
# depends       : 

name=libunistring
version=1.3    
release=1
source="https://ftp.gnu.org/gnu/libunistring/libunistring-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/libunistring-$version 
    make
    make DESTDIR=$PKG install
}
