# description   : The libclc package contains an implementation of the library requirements of the OpenCL C programming language, as specified by the OpenCL 1
# depends       : spirvllvmtranslator

name=libclc
version=20.1.8    
release=1
source="https://github.com/llvm/llvm-project/releases/download/llvmorg-$version/libclc-$version.src.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    -G Ninja ..                  
    ninja
    DESTDIR=$PKG ninja install
}
