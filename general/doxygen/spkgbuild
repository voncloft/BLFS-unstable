# description   : The Doxygen package contains a documentation system for C++, C, Java, Objective-C, Corba IDL and to some extent PHP, C# and D
# depends       : cmake git qt

name=doxygen
version=1.14.0    
release=1
source="https://doxygen.nl/files/doxygen-$version.src.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    grep -rl '^#!.*python$' | xargs sed -i '1s/python/3/'
    mkdir -v build 
    cd       build 
    cmake -G "Unix Makefiles"          \
    -D CMAKE_BUILD_TYPE=Release  \
    -D CMAKE_INSTALL_PREFIX=/usr \
    -D build_wizard=ON           \
    -D force_qt=Qt6              \
    -W no-dev .. 
    make
    cmake  -D build_doc=ON \
    -D DOC_INSTALL_DIR=share/doc/doxygen-$version \
    .. 
    make DESTDIR=$PKG docs
    make DESTDIR=$PKG install 
    install -vm644 ../doc/*.1 /usr/share/man/man1
}
