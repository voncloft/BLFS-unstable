# description   : The Python 3
# depends       : sqlite

name=python
version=3.11.1    
release=1
source="https://www.python.org/ftp/python/$version/Python-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/opt/python3.11 \
    --disable-shared         \
    --with-system-expat      \
    --without-static-libpython 
    make
    make DESTDIR=$PKG install
}
