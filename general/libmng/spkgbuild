# description   : The libmng libraries are used by programs wanting to read and write Multiple-image Network Graphics (MNG) files which are the animation equivalents to PNG files
# depends       : libjpegturbo littlecms

name=libmng
version=2.0.3    
release=1
source="https://downloads.sourceforge.net/libmng/libmng-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install 
    install -v -m755 -d        /usr/share/doc/libmng-$version 
    install -v -m644 doc/*.txt /usr/share/doc/libmng-$version
}
