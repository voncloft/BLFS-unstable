# description   : The Zip package contains Zip utilities
# depends       : 

name=zip
version=3.0    
release=1
source="https://downloads.sourceforge.net/infozip/zip30.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    make DESTDIR=$PKG -f unix/Makefile generic CC="gcc -std=gnu89"
    make DESTDIR=$PKG prefix=/usr MANDIR=/usr/share/man/man1 -f unix/Makefile install
}
