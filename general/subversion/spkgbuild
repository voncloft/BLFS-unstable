# description   : Subversion is a version control system that is designed to be a compelling replacement for CVS in the open source community
# depends       : aprutil sqlite serf swig

name=subversion
version=1.14.5    
release=1
source="https://archive.apache.org/dist/subversion/subversion-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr            \
    --disable-static         \
    --with-apache-libexecdir \
    --with-utf8proc=internal 
    make
    doxygen doc/doxygen.conf
    make DESTDIR=$PKG install 
    install -v -m755 -d /usr/share/doc/subversion-$version 
    cp      -v -R doc/* /usr/share/doc/subversion-$version
}
