# description   : elogind is the systemd project's \"logind\", extracted to be a standalone daemon
# depends       : dbus linuxpam polkit docbookxml docbookxslnons libxslt

name=elogind
version=255.17    
release=1
source="https://github.com/elogind/elogind/archive/v$version/elogind-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup ..                               \
    --prefix=/usr                          \
    --buildtype=release                    \
    -D man=auto                            \
    -D docdir=/usr/share/doc/elogind-$version \
    -D cgroup-controller=elogind           \
    -D dev-kvm-mode=0660                   \
    -D dbuspolicydir=/etc/dbus-1/system.d 
    ninja
    DESTDIR=$PKG ninja install                                           
    ln -sfv  libelogind.pc /usr/lib/pkgconfig/libsystemd.pc 
    ln -sfvn elogind /usr/include/systemd
    sed -e '/\[Login\]/a KillUserProcesses=no' \
    -i /etc/elogind/logind.conf
cat >> /etc/pam.d/system-session << "EOF" 
    # Begin elogind addition
    session  required    pam_loginuid.so
    session  optional    pam_elogind.so
    # End elogind addition
EOF
cat > $PKG/etc/pam.d/elogind-user << "EOF"
    # Begin /etc/pam.d/elogind-user
    account  required    pam_access.so
    account  include     system-account
    session  required    pam_env.so
    session  required    pam_limits.so
    session  required    pam_unix.so
    session  required    pam_loginuid.so
    session  optional    pam_keyinit.so force revoke
    session  optional    pam_elogind.so
    auth     required    pam_deny.so
    password required    pam_deny.so
    # End /etc/pam.d/elogind-user
EOF
}
