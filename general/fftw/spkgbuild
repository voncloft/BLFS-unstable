# description   : FFTW is a C subroutine library for computing the discrete Fourier transform (DFT) in one or more dimensions, of arbitrary input size, and of both real and complex data (as well as of even/odd data, i
# depends       : 

name=fftw
version=3.3.10    
release=1
source="https://www.fftw.org/fftw-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --enable-shared  \
    --disable-static \
    --enable-threads \
    --enable-sse2    \
    --enable-avx     \
    --enable-avx2    
    make
    make DESTDIR=$PKG clean 
    ./configure --prefix=/usr    \
    --enable-shared  \
    --disable-static \
    --enable-threads \
    --enable-sse2    \
    --enable-avx     \
    --enable-avx2    \
    --enable-float   
    make
    make DESTDIR=$PKG clean 
    ./configure --prefix=/usr    \
    --enable-shared  \
    --disable-static \
    --enable-threads \
    --enable-long-double 
    make
    make DESTDIR=$PKG install
    make DESTDIR=$PKG install
    make DESTDIR=$PKG install
}
