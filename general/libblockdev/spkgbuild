# description   : libblockdev is a C library supporting GObject Introspection for manipulation of block devices
# depends       : glib cryptsetup keyutils libatasmart libbytesize libnvme lvm2

name=libblockdev
version=3.3.1    
release=1
source="https://github.com/storaged-project/libblockdev/releases/download/$version/libblockdev-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr      \
    --sysconfdir=/etc  \
    --with-python3     \
    --without-escrow   \
    --without-gtk-doc  \
    --without-lvm      \
    --without-lvm_dbus \
    --without-nvdimm   \
    --without-tools    \
    --without-smartmontools 
    make
    make DESTDIR=$PKG install
}
