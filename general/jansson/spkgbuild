# description   : The Jansson package contains a library used to encode, decode, and manipulate JSON data
# depends       : 

name=jansson
version=2.14.1    
release=1
source="https://github.com/akheron/jansson/releases/download/v$version/jansson-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install
}
