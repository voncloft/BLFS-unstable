# description   : The GLibmm package is a set of C++ bindings for GLib
# depends       : glib libsigc

name=glibmm
version=2.84.0    
release=1
source="https://download.gnome.org/sources/glibmm/2.84/glibmm-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir bld 
    cd    bld 
    meson setup --prefix=/usr --buildtype=release .. 
    ninja
    DESTDIR=$PKG ninja install
}
