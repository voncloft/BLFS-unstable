# description   : The Sharutils package contains utilities that can create 'shell' archives
# depends       : 

name=sharutils
version=4.15.2    
release=1
source="https://ftp.gnu.org/gnu/sharutils/sharutils-$version.tar.xz
https://www.linuxfromscratch.org/patches/blfs/svn/sharutils-$version-consolidated-1.patch"

options="!checksum"

build() {
    cd $name-$version
    
    patch -Np1 -i ../sharutils-$version-consolidated-1.patch
    autoreconf -fiv                                         
    ./configure --prefix=/usr --disable-dependency-tracking 
    make
    make DESTDIR=$PKG install
}
