# description   : The Abseil-cpp package contains a series of libraries designed to augment the C++ standard library
# depends       : cmake

name=abseil-cpp
version=20250512.1    
release=1
source="https://github.com/abseil/abseil-cpp/releases/download/$version/abseil-cpp-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    -D ABSL_PROPAGATE_CXX_STD=ON \
    -D BUILD_SHARED_LIBS=ON      \
    -G Ninja ..                  
    ninja
    DESTDIR=$PKG ninja install
}
