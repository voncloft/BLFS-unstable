# description   : Yasm is a complete rewrite of the NASM-2
# depends       : 

name=yasm
version=1.3.0    
release=1
source="https://www.tortall.net/projects/yasm/releases/yasm-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -e 's/def __cplusplus/ defined(__cplusplus) || __STDC_VERSION__ >= 202311L/' \
    -i libyasm/bitvect.h
    sed -i 's#) ytasm.*#)#' Makefile.in 
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
}
