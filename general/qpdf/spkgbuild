# description   : The Qpdf package contains command-line programs and a library that does structural, content-preserving transformations on PDF files
# depends       : libjpegturbo

name=qpdf
version=12.2.0    
release=1
source="https://github.com/qpdf/qpdf/releases/download/v$version/qpdf-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D CMAKE_BUILD_TYPE=Release  \
    -D BUILD_STATIC_LIBS=OFF     \
    -D CMAKE_INSTALL_DOCDIR=/usr/share/doc/qpdf-$version \
    .. 
    make
    make DESTDIR=$PKG install
}
