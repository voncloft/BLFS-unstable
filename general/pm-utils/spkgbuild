# description   : The Power Management Utilities provide simple shell command line tools to suspend and hibernate the computer
# depends       : 

name=pm-utils
version=1.4.1    
release=1
source="https://pm-utils.freedesktop.org/releases/pm-utils-$version.tar.gz
https://www.linuxfromscratch.org/patches/blfs/svn/pm-utils-$version-bugfixes-1.patch"

options="!checksum"

build() {
    cd $name-$version
    
    patch -Np1 -i ../pm-utils-$version-bugfixes-1.patch
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --docdir=/usr/share/doc/pm-utils-$version 
    make
    make DESTDIR=$PKG install
    install -v -m644 man/*.1 /usr/share/man/man1 
    install -v -m644 man/*.8 /usr/share/man/man8 
    ln -sv pm-action.8 /usr/share/man/man8/pm-suspend.8 
    ln -sv pm-action.8 /usr/share/man/man8/pm-hibernate.8 
    ln -sv pm-action.8 /usr/share/man/man8/pm-suspend-hybrid.8
}
