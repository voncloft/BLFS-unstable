# description   : libtasn1 is a highly portable C library that encodes and decodes DER/BER data following an ASN
# depends       : 

name=libtasn1
version=4.20.0    
release=1
source="https://ftp.gnu.org/gnu/libtasn1/libtasn1-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install
    make DESTDIR=$PKG -C doc/reference install-data-local
}
