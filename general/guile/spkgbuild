# description   : The Guile package contains the GNU Project's extension language library
# depends       : gc libunistring

name=guile
version=3.0.10    
release=1
source="https://ftp.gnu.org/gnu/guile/guile-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    CC="gcc -std=gnu17"          \
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/guile-$version 
    make DESTDIR=$PKG      
    make DESTDIR=$PKG html 
    makeinfo --plaintext -o doc/r5rs/r5rs.txt doc/r5rs/r5rs.texi 
    makeinfo --plaintext -o doc/ref/guile.txt doc/ref/guile.texi
    make DESTDIR=$PKG install      
    make DESTDIR=$PKG install-html 
    mkdir -p                       /usr/share/gdb/auto-load/usr/lib 
    mv /usr/lib/libguile-*-gdb.scm /usr/share/gdb/auto-load/usr/lib 
    mv /usr/share/doc/guile-$version/{guile.html,ref} 
    mv /usr/share/doc/guile-$version/r5rs{.html,}     
    find examples -name "Makefile*" -delete         
    cp -vR examples   /usr/share/doc/guile-$version   
    for DIRNAME in r5rs ref; do
    install -v -m644  doc/${DIRNAME}/*.txt \
    /usr/share/doc/guile-$version/${DIRNAME}
    done 
    unset DIRNAME
}
