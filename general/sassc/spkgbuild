# description   : SassC is a wrapper around libsass, a CSS pre-processor language
# depends       : 

name=sassc
version=3.6.2    
release=1
source="https://github.com/sass/sassc/archive/$version/sassc-$version.tar.gz
https://github.com/sass/libsass/archive/3.6.6/libsass-3.6.6.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    tar -xf ../libsass-3.6.6.tar.gz 
    pushd libsass-3.6.6 
    autoreconf -fi 
    ./configure --prefix=/usr --disable-static 
    make
    popd 
    autoreconf -fi 
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
    make DESTDIR=$PKG install
}
