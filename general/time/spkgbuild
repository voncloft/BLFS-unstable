# description   : The time utility is a program that measures many of the CPU resources, such as time and memory, that other programs use
# depends       : 

name=time
version=1.9    
release=1
source="https://ftp.gnu.org/gnu/time/time-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i 's/sighandler interrupt_signal/__sighandler_t interrupt_signal/' src/time.c
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
}
