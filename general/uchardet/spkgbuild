# description   : The Uchardet package contains an encoding detector library which takes a sequence of bytes in an unknown character encoding and attempts to determine the encoding of the text
# depends       : cmake

name=uchardet
version=0.0.8    
release=1
source="https://www.freedesktop.org/software/uchardet/releases/uchardet-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr        \
    -D BUILD_STATIC=OFF                 \
    -D CMAKE_POLICY_VERSION_MINIMUM=3.5 \
    -W no-dev ..                        
    make
    make DESTDIR=$PKG install
}
