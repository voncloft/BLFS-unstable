# description   : The GTK-Doc package contains a code documenter
# depends       : docbookxml docbookxslnons glib itstool libxslt pygments

name=gtk-doc
version=1.34.0    
release=1
source="https://download.gnome.org/sources/gtk-doc/1.34/gtk-doc-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir -p build 
    cd       build 
    meson setup --prefix=/usr --buildtype=release .. 
    ninja
    DESTDIR=$PKG ninja install
}
