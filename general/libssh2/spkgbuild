# description   : Libssh2 package is a client-side C library implementing the SSH2 protocol
# depends       : 

name=libssh2
version=1.11.1    
release=1
source="https://www.libssh2.org/download/libssh2-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr          \
    --disable-docker-tests \
    --disable-static       
    make
    make DESTDIR=$PKG install
}
