# description   : The mypaint-brushes package contains brushes used by packages which use libmypaint
# depends       : libmypaint

name=mypaint-brushes
version=1.3.1    
release=1
source="https://github.com/mypaint/mypaint-brushes/releases/download/v$version/mypaint-brushes-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
}
