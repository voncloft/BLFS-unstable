# description   : The libxslt package contains XSLT libraries used for extending libxml2 libraries to support XSLT files
# depends       : libxml2 docbookxml docbookxslnons

name=libxslt
version=1.1.43    
release=1
source="https://download.gnome.org/sources/libxslt/1.1/libxslt-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/libxslt-$version 
    make
    make DESTDIR=$PKG install
}
