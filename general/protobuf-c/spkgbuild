# description   : The Protobuf-c package contains an implementation of the Google Protocol Buffers data serialization format in C
# depends       : protobuf

name=protobuf-c
version=1.5.2    
release=1
source="https://github.com/protobuf-c/protobuf-c/releases/download/v$version/protobuf-c-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install
}
