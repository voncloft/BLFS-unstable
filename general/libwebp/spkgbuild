# description   : The libwebp package contains a library and support programs to encode and decode images in WebP format
# depends       : libjpegturbo libpng libtiff sdl2

name=libwebp
version=1.6.0    
release=1
source="https://storage.googleapis.com/downloads.webmproject.org/releases/webp/libwebp-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr           \
    --enable-libwebpmux     \
    --enable-libwebpdemux   \
    --enable-libwebpdecoder \
    --enable-libwebpextras  \
    --enable-swap-16bit-csp \
    --disable-static        
    make
    make DESTDIR=$PKG install
}
