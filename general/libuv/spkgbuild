# description   : The libuv package is a multi-platform support library with a focus on asynchronous I/O
# depends       : 

name=libuv
version=1.51.0    
release=1
source="https://dist.libuv.org/dist/v$version/libuv-v$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sh autogen.sh                              
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG man -C docs
    make DESTDIR=$PKG install
    install -Dm644 docs/build/man/libuv.1 /usr/share/man/man1
}
