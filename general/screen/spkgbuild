# description   : Screen is a terminal multiplexor that runs several separate processes, typically interactive shells, on a single physical character-based terminal
# depends       : 

name=screen
version=5.0.1    
release=1
source="https://ftp.gnu.org/gnu/screen/screen-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed 's/\([a-z]\)@opensuse/\1@@opensuse/' -i doc/screen.texinfo
    ./configure --prefix=/usr                   \
    --infodir=/usr/share/info       \
    --mandir=/usr/share/man         \
    --disable-pam                   \
    --enable-socket-dir=/run/screen \
    --with-pty-group=5              \
    --with-system_screenrc=/etc/screenrc 
    sed -i -e "s%/usr/local/etc/screenrc%/etc/screenrc%" {etc,doc}/* 
    make
    make DESTDIR=$PKG install 
    install -m 644 etc/etcscreenrc /etc/screenrc
}
