# description   : The libtiff package contains the TIFF libraries and associated utilities
# depends       : cmake

name=libtiff
version=4.7.0    
release=1
source="https://download.osgeo.org/libtiff/tiff-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir -p libtiff-build 
    cd       libtiff-build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr ..     \
    -D CMAKE_POLICY_VERSION_MINIMUM=3.5 \
    -G Ninja                            \
    -D CMAKE_INSTALL_DOCDIR=/usr/share/doc/libtiff-$version 
    ninja
    DESTDIR=$PKG ninja install
}
