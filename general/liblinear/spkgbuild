# description   : This package provides a library for learning linear classifiers for large scale applications
# depends       : 

name=liblinear
version=249    
release=1
source="https://github.com/cjlin1/liblinear/archive/v$version/liblinear-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    make DESTDIR=$PKG lib
    install -vm644 linear.h /usr/include 
    install -vm755 liblinear.so.6 /usr/lib 
    ln -sfv liblinear.so.6 /usr/lib/liblinear.so
}
