# description   : The libusb package contains a library used by some applications for USB device access
# depends       : 

name=libusb
version=1.0.29    
release=1
source="https://github.com/libusb/libusb/releases/download/v$version/libusb-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    pushd doc                
    doxygen -u doxygen.cfg 
    make DESTDIR=$PKG docs              
    popd
    make DESTDIR=$PKG install
    install -v -d -m755 /usr/share/doc/libusb-$version/apidocs 
    install -v -m644    doc/api-1.0/* \
    /usr/share/doc/libusb-$version/apidocs
}
