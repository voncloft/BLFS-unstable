# description   : The gmmlib package contains the Intel Graphics Memory Management Library, which provides device specific memory and buffer management functions for the Intel Media Driver for VAAPI and the Intel Graphics Computer Runtime for OpenCL (TM)
# depends       : cmake

name=gmmlib
version=22.8.1    
release=1
source="https://github.com/lfs-book/gmmlib/archive/v$version/gmmlib-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr \
    -D BUILD_TYPE=Release        \
    -G Ninja                     \
    -W no-dev ..                 
    ninja
    DESTDIR=$PKG ninja install
}
