# description   : NASM (Netwide Assembler) is an 80x86 assembler designed for portability and modularity
# depends       : 

name=nasm
version=2.16.03    
release=1
source="https://www.nasm.us/pub/nasm/releasebuilds/$version/nasm-$version.tar.xz
https://www.nasm.us/pub/nasm/releasebuilds/$version/nasm-$version-xdoc.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    tar -xf ../nasm-$version-xdoc.tar.xz --strip-components=1
    ./configure --prefix=/usr 
    make
    make DESTDIR=$PKG install
    install -m755 -d         /usr/share/doc/nasm-$version/html  
    cp -v doc/html/*.html    /usr/share/doc/nasm-$version/html  
    cp -v doc/*.{txt,ps,pdf} /usr/share/doc/nasm-$version
}
