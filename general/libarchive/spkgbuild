# description   : The libarchive library provides a single interface for reading/writing various compression formats
# depends       : 

name=libarchive
version=3.8.1    
release=1
source="https://github.com/libarchive/libarchive/releases/download/v$version/libarchive-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install
    ln -sfv bsdunzip /usr/bin/unzip
}
