# description   : The PCI Utils package contains a set of programs for listing PCI devices, inspecting their status and setting their configuration registers
# depends       : hwdata

name=pciutils
version=3.14.0    
release=1
source="https://mj.ucw.cz/download/linux/pci/pciutils-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -r '/INSTALL/{/PCI_IDS|update-pciids /d; s/update-pciids.8//}' \
    -i Makefile
    make DESTDIR=$PKG PREFIX=/usr                \
    SHAREDIR=/usr/share/hwdata \
    SHARED=yes
    make DESTDIR=$PKG PREFIX=/usr                \
    SHAREDIR=/usr/share/hwdata \
    SHARED=yes                 \
    install install-lib        
    chmod -v 755 /usr/lib/libpci.so
}
