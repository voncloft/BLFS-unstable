# description   : The utfcpp package contains a set of include files to provide UTF-8 with C++ in a Portable Way
# depends       : cmake

name=utfcpp
version=4.0.6    
release=1
source="https://github.com/nemtrif/utfcpp/archive/v$version/utfcpp-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    cmake -D CMAKE_INSTALL_PREFIX=/usr ..
    make DESTDIR=$PKG install
}
