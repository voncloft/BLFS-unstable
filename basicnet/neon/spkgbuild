# description   : neon is an HTTP and WebDAV client library, with a C interface
# depends       : 

name=neon
version=0.35.0    
release=1
source="https://notroj.github.io/neon/neon-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr    \
    --with-ssl       \
    --enable-shared  \
    --disable-static 
    make
    make DESTDIR=$PKG docs
    make DESTDIR=$PKG install
}
