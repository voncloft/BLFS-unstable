# description   : The libsoup3 is a HTTP client/server library for GNOME
# depends       : glibnetworking libpsl libxml2 nghttp2 sqlite glib vala

name=libsoup
version=3.6.5    
release=1
source="https://download.gnome.org/sources/libsoup/3.6/libsoup-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    sed 's/apiversion/soup_version/' -i docs/reference/meson.build
    mkdir build 
    cd    build 
    meson setup --prefix=/usr          \
    --buildtype=release    \
    --wrap-mode=nofallback \
    ..                     
    ninja
    DESTDIR=$PKG ninja install
}
