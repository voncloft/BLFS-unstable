# description   : The libtirpc package contains libraries that support programs that use the Remote Procedure Call (RPC) API
# depends       : 

name=libtirpc
version=1.3.6    
release=1
source="https://downloads.sourceforge.net/libtirpc/libtirpc-$version.tar.bz2
https://www.linuxfromscratch.org/patches/blfs/svn/libtirpc-$version-gcc15_fixes-1.patch"

options="!checksum"

build() {
    cd $name-$version
    
    patch -Np1 -i $SRC/libtirpc-$version-gcc15_fixes-1.patch
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --disable-static  \
    --disable-gssapi  
    make
    make DESTDIR=$PKG install
}
