# description   : The Serf package contains a C-based HTTP client library built upon the Apache Portable Runtime (APR) library
# depends       : aprutil scons

name=serf
version=1.3.10    
release=1
source="https://archive.apache.org/dist/serf/serf-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i "/Append/s:RPATH=libdir,::"          SConstruct 
    sed -i "/Default/s:lib_static,::"           SConstruct 
    sed -i "/Alias/s:install_static,::"         SConstruct 
    scons PREFIX=/usr
    scons PREFIX=/usr DESTDIR=$PKG install
}
