# description   : The libnl suite is a collection of libraries providing APIs to netlink protocol based Linux kernel interfaces
# depends       : 

name=libnl
version=3.11.0    
release=1
source="https://github.com/thom311/libnl/releases/download/libnl$version/libnl-$version.tar.gz
https://github.com/thom311/libnl/releases/download/libnl$version/libnl-doc-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --disable-static  
    make
    make DESTDIR=$PKG install
    mkdir -vp /usr/share/doc/libnl-$version 
    tar -xf ../libnl-doc-$version.tar.gz --strip-components=1 --no-same-owner \
    -C  /usr/share/doc/libnl-$version
}
