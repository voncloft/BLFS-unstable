# description   : The cifs-utils package provides a means for mounting SMB/CIFS shares on a Linux system
# depends       : talloc mitkerberosv5

name=cifs-utils
version=7.4    
release=1
source="https://www.samba.org/ftp/linux-cifs/cifs-utils/cifs-utils-$version.tar.bz2"

options="!checksum"

build() {
    cd $name-$version
    
    autoreconf -fiv
    ./configure --prefix=/usr \
    --disable-pam \
    --disable-systemd 
    make
    make DESTDIR=$PKG install
}
