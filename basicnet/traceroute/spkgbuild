# description   : The Traceroute package contains a program which is used to display the network route that packets take to reach a specified host
# depends       : 

name=traceroute
version=2.1.6    
release=1
source="https://downloads.sourceforge.net/traceroute/traceroute-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    make
    make DESTDIR=$PKG prefix=/usr install                                 
    ln -sv -f traceroute $PKG/usr/bin/traceroute6                
    ln -sv -f traceroute.8 $PKG/usr/share/man/man8/traceroute6.8 
    rm -fv $PKG/usr/share/man/man1/traceroute.1
}
