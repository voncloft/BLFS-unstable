# description   : ldns is a fast DNS library with the goal to simplify DNS programming and to allow developers to easily create software conforming to current RFCs and Internet drafts
# depends       : 

name=ldns
version=1.8.4    
release=1
source="https://www.nlnetlabs.nl/downloads/ldns/ldns-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --disable-static  \
    --with-drill      
    make
    make DESTDIR=$PKG doc
    make DESTDIR=$PKG install
    install -v -m755 -d $PKG/usr/share/doc/ldns-$version 
    install -v -m644 doc/html/* $PKG/usr/share/doc/ldns-$version
}
