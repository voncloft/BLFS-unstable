# description   : The Wget package contains a utility useful for non-interactive downloading of files from the Web
# depends       : libpsl makeca

name=wget
version=1.25.0    
release=1
source="https://ftp.gnu.org/gnu/wget/wget-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr      \
    --sysconfdir=/etc  \
    --with-ssl=openssl 
    make
    make DESTDIR=$PKG install
}
