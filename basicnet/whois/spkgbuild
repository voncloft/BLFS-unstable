# description   : Whois is a client-side application which queries the whois directory service for information pertaining to a particular domain name
# depends       : 

name=whois
version=5.6.4    
release=1
source="https://github.com/rfc1036/whois/archive/v$version/whois-$version.tar.gz"

options="!checksum"

build() {
    cd $name-$version
    
    make
    make DESTDIR=$PKG prefix=/usr install-whois
    make DESTDIR=$PKG prefix=/usr install-mkpasswd
    make DESTDIR=$PKG prefix=/usr install-pos
}
