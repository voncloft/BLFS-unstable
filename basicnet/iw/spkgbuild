# description   : iw is a new nl80211 based CLI configuration utility for wireless devices
# depends       : libnl

name=iw
version=6.9    
release=1
source="https://www.kernel.org/pub/software/network/iw/iw-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i "/INSTALL.*gz/s/.gz//" Makefile 
    make
    make DESTDIR=$PKG install
}
