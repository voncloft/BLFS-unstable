# description   : The NetworkManager Applet provides a tool and a panel applet used to configure wired and wireless network connections through GUI
# depends       : gtk libnma libsecret glib modemmanager polkit polkitauthenticationagent

name=network-manager-applet
version=1.34.0    
release=1
source="https://download.gnome.org/sources/network-manager-applet/1.34/network-manager-applet-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup ..            \
    --prefix=/usr       \
    --buildtype=release \
    -D appindicator=no  \
    -D selinux=false    \
    -D team=false       
    ninja
    DESTDIR=$PKG ninja install
}
