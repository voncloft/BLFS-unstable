# description   : Seahorse is a graphical interface for managing and using encryption keys
# depends       : gcr gnupg gpgme itstool libhandy libpwquality libsecret vala libsoup opensshp1 gnomekeyring

name=seahorse
version=47.0.1    
release=1
source="https://download.gnome.org/sources/seahorse/47/seahorse-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i -r 's:"(/apps):"/org/gnome\1:' data/*.xml 
    mkdir build 
    cd    build 
    meson setup --prefix=/usr --buildtype=release .. 
    ninja
    DESTDIR=$PKG ninja install
}
