# description   : The GNOME Nettool package is a network information tool which provides GUI interface for some of the most common command line network tools
# depends       : gtk itstool libgtop

name=gnome-nettool
version=42.0    
release=1
source="https://download.gnome.org/sources/gnome-nettool/42/gnome-nettool-$version.tar.xz
https://www.linuxfromscratch.org/patches/blfs/svn/gnome-nettool-$version-ping_and_netstat_fixes-1.patch"

options="!checksum"

build() {
    cd $name-$version
    
    patch -Np1 -i ../gnome-nettool-$version-ping_and_netstat_fixes-1.patch
    sed -i '/merge_file/s/(.*/(/' data/meson.build
    mkdir build 
    cd    build 
    meson setup --prefix=/usr --buildtype=release 
    ninja
    DESTDIR=$PKG ninja install
}
