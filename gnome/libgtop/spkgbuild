# description   : The libgtop package contains the GNOME top libraries
# depends       : glib xorglibraries

name=libgtop
version=2.41.3    
release=1
source="https://download.gnome.org/sources/libgtop/2.41/libgtop-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr --disable-static 
    make
    make DESTDIR=$PKG install
}
