# description   : GNOME Tweaks is a simple program used to tweak advanced GNOME settings
# depends       : gtk gsettingsdesktopschemas libadwaita libgudev pygobject soundthemefreedesktop

name=gnome-tweaks
version=46.1    
release=1
source="https://download.gnome.org/sources/gnome-tweaks/46/gnome-tweaks-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup --prefix=/usr --buildtype=release 
    ninja
    DESTDIR=$PKG ninja install
}
