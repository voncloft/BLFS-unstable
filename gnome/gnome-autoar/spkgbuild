# description   : The gnome-autoar package provides a framework for automatic archive extraction, compression, and management
# depends       : libarchive gtk vala

name=gnome-autoar
version=0.4.5    
release=1
source="https://download.gnome.org/sources/gnome-autoar/0.4/gnome-autoar-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    mkdir build 
    cd    build 
    meson setup --prefix=/usr       \
    --buildtype=release \
    -D vapi=true        \
    -D tests=true       \
    ..                  
    ninja
    DESTDIR=$PKG ninja install
}
