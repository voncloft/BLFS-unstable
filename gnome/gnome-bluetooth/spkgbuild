# description   : The GNOME Bluetooth package contains tools for managing and manipulating Bluetooth devices using the GNOME Desktop
# depends       : gtk gsound libnotify upower glib libadwaita

name=gnome-bluetooth
version=47.1    
release=1
source="https://download.gnome.org/sources/gnome-bluetooth/47/gnome-bluetooth-$version.tar.xz
https://www.linuxfromscratch.org/patches/blfs/svn/gnome-bluetooth-$version-build_fix-1.patch"

options="!checksum"

build() {
    cd $name-$version
    
    patch -Np1 -i ../gnome-bluetooth-$version-build_fix-1.patch
    mkdir build 
    cd    build 
    meson setup --prefix=/usr --buildtype=release .. 
    ninja
    DESTDIR=$PKG ninja install
}
