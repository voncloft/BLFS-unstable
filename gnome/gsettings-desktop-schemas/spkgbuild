# description   : The GSettings Desktop Schemas package contains a collection of GSettings schemas for settings shared by various components of a GNOME Desktop
# depends       : glib

name=gsettings-desktop-schemas
version=48.0    
release=1
source="https://download.gnome.org/sources/gsettings-desktop-schemas/48/gsettings-desktop-schemas-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    sed -i -r 's:"(/system):"/org/gnome\1:g' schemas/*.in 
    mkdir build 
    cd    build 
    meson setup --prefix=/usr --buildtype=release .. 
    ninja
    DESTDIR=$PKG ninja install
    glib-compile-schemas /usr/share/glib-2.0/schemas
}
