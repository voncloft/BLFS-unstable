# description   : The GNOME Menus package contains an implementation of the draft Desktop Menu Specification from freedesktop
# depends       : glib

name=gnome-menus
version=3.36.0    
release=1
source="https://download.gnome.org/sources/gnome-menus/3.36/gnome-menus-$version.tar.xz"

options="!checksum"

build() {
    cd $name-$version
    
    ./configure --prefix=/usr     \
    --sysconfdir=/etc \
    --disable-static  
    make
    make DESTDIR=$PKG install
}
